extends base.pug

block content 
  h4 Update Video
  form(method="POST")
    input(name="title" placeholder="Video Title" value=video.title required)
    input(type="text" placeholder="Description" name="description" value=video.description minLength=20 required )
    input(type="text" placeholder="Hashtags, separated by comma." name="hashtags" value=video.hashtags.join() required )
    input(type="submit" value="Save")