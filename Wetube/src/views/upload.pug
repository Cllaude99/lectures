extends base.pug

block content 
  if errorMessage
    span=errorMessage 
  form(method="POST")
    input(type="text" placeholder="Title" name="title" maxLength=80 required )
    input(type="text" placeholder="Description" name="description" minLength=20 required )
    input(type="text" placeholder="Hashtags, separated by comma." name="hashtags" required )
    input(type="submit" value="Upload Video")